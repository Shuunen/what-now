{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/what-now/issues",
  "description": "Minimalistic task coach",
  "devDependencies": {
    "@camwiegert/typical": "0.1.1",
    "cypress": "6.2.0",
    "eslint": "7.16.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-cypress": "2.11.2",
    "eslint-plugin-html": "6.1.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.1.0",
    "eslint-plugin-unicorn": "25.0.1",
    "npm-run-all": "4.1.5",
    "parcel-bundler": "1.12.4",
    "parcel-plugin-purgecss": "3.0.0",
    "parcel-plugin-static-files-copy": "2.5.0",
    "posthtml-include": "1.6.0",
    "repo-check": "1.14.2",
    "rimraf": "3.0.2",
    "serialize-to-js": "3.1.1",
    "serve": "11.3.2",
    "shuutils": "4.1.0",
    "tinygesture": "1.1.4"
  },
  "files": [
    "src",
    "static"
  ],
  "homepage": "https://github.com/Shuunen/what-now",
  "keywords": [
    "minimalist",
    "task",
    "coach"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/what-now",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/what-now.git"
  },
  "scripts": {
    "build": "parcel build src/index.html --public-url . --no-source-maps --detailed-report",
    "check": "repo-check",
    "ci": "run-s lint test check",
    "cy:info": "cypress info",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:verify": "cypress verify",
    "dev": "run-p watch cy:open",
    "lint": "eslint --fix --ignore-path .gitignore --ext .js,.html .",
    "postversion": "git push && git push --tags",
    "prebuild": "rimraf dist/*",
    "pretest": "npm run build",
    "preversion": "npm run ci",
    "serve": "serve dist --listen 8000 --single",
    "start": "npm run watch",
    "test": "run-p serve cy:run --race",
    "update": "npx npm-check-updates -u",
    "watch": "parcel src/index.html --port 8000"
  },
  "version": "0.1.0"
}
