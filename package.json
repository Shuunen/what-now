{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/what-now/issues",
  "description": "Minimalistic task coach",
  "devDependencies": {
    "@types/mocha": "8.2.0",
    "mocha": "8.2.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "repo-check": "1.14.2",
    "rimraf": "3.0.2",
    "serialize-to-js": "3.1.1",
    "serve": "11.3.2",
    "shuutils": "4.2.0",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "files": [
    "src",
    "static"
  ],
  "homepage": "https://github.com/Shuunen/what-now",
  "keywords": [
    "minimalist",
    "task",
    "coach"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/what-now",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/what-now.git"
  },
  "scripts": {
    "build": "parcel build src/index.html --public-url . --no-source-maps --detailed-report",
    "check": "repo-check",
    "ci": "run-s lint test check",
    "cy:info": "cypress info",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:verify": "cypress verify",
    "dev": "run-p watch cy:open",
    "lint": "eslint --fix --ignore-path .gitignore --ext .js,.html .",
    "postversion": "git push && git push --tags",
    "prebuild": "rimraf dist/*",
    "pretest": "npm run build",
    "preversion": "npm run ci",
    "test": "nyc mocha",
    "test:watch": "onchange --initial \"src/**/*.ts\" \"tests/**/*.ts\" -- npm test",
    "update": "npx npm-check-updates -u"
  },
  "version": "0.1.0"
}
