{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/what-now/issues",
  "description": "Minimalistic task coach",
  "devDependencies": {
    "@poi/plugin-typescript": "12.3.1",
    "@types/mocha": "8.2.0",
    "mocha": "8.2.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "onchange": "7.1.0",
    "poi": "12.10.3",
    "postcss": "8.2.4",
    "repo-check": "1.14.3",
    "shuutils": "4.3.0",
    "tailwindcss-cli": "0.1.2",
    "ts-node": "9.1.1",
    "typescript": "4.1.3",
    "xo": "0.37.1"
  },
  "files": [
    "src",
    "static"
  ],
  "homepage": "https://github.com/Shuunen/what-now",
  "keywords": [
    "minimalist",
    "task",
    "coach"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/what-now",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/what-now.git"
  },
  "scripts": {
    "build": "npm run env NODE_ENV=production -- run-s build:css build:js",
    "build:js": "poi src/index.html --prod",
    "build:css": "tailwindcss-cli build -o src/assets/_tailwind.css",
    "check": "repo-check",
    "ci": "run-s lint test build",
    "dev": "run-s build:css serve",
    "lint": "xo --fix",
    "postversion": "git push && git push --tags",
    "preversion": "npm run ci",
    "serve": "poi src/index.html --serve",
    "start": "npm run dev",
    "test": "nyc mocha",
    "test:watch": "onchange --initial \"src/**/*.ts\" \"tests/**/*.ts\" -- npm test",
    "update": "npx npm-check-updates -u"
  },
  "version": "1.0.0"
}
