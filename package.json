{
  "$schema": "https://json.schemastore.org/package",
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/what-now/issues",
  "dependencies": {
    "canvas-confetti": "1",
    "shuutils": "7.0"
  },
  "description": "Minimalist task coach",
  "devDependencies": {
    "@types/canvas-confetti": "1",
    "@types/node": "18",
    "c8": "7",
    "esbuild": "0.16",
    "eslint": "8.30",
    "eslint-config-hardcore": "26",
    "eslint-plugin-tailwindcss": "3",
    "npm-parallel": "2",
    "repo-check": "1.29",
    "servor": "4",
    "tailwindcss": "3",
    "tsm": "2",
    "typescript": "4",
    "uvu": "0",
    "watchlist": "0"
  },
  "files": [
    "src"
  ],
  "homepage": "https://github.com/Shuunen/what-now",
  "keywords": [
    "minimalist",
    "webapp",
    "task",
    "coach"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/what-now",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/what-now.git"
  },
  "scripts": {
    "build": "parallel build:css build:js",
    "build:css": "tailwindcss -o ./public/index.css",
    "build:js": "esbuild src/index.ts --outdir=public --bundle",
    "check": "repo-check",
    "ci": "npm run build && npm run lint && npm run check && npm run test",
    "dev": "parallel dev:css dev:js serve",
    "dev:css": "npm run build:css -- --watch",
    "dev:js": "npm run build:js -- --watch",
    "lint": "tsc --noEmit && eslint --cache --fix --ignore-path .gitignore --ext .js,.ts,.html . && echo lint success",
    "lint:watch": "watchlist src tests -eager -- npm run lint",
    "mark": "unique-mark public/index.html",
    "postversion": "git push && git push --tags",
    "preversion": "npm run ci",
    "serve": "servor public --reload",
    "start": "npm run dev",
    "test": "c8 uvu -r tsm tests",
    "test:watch": "watchlist src tests -eager -- npm test"
  },
  "version": "1.2.0"
}
