{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/what-now/issues",
  "description": "Minimalistic task coach",
  "devDependencies": {
    "@types/mocha": "8.2.1",
    "mocha": "8.3.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "onchange": "7.1.0",
    "repo-check": "1.14.8",
    "servor": "4.0.2",
    "shuutils": "4.3.0",
    "ts-node": "9.1.1",
    "tsup": "4.1.0",
    "twind": "0.15.4",
    "typescript": "4.1.5",
    "xo": "0.38.1"
  },
  "files": [
    "src",
    "static"
  ],
  "homepage": "https://github.com/Shuunen/what-now",
  "keywords": [
    "minimalist",
    "task",
    "coach"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/what-now",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/what-now.git"
  },
  "scripts": {
    "build": "tsup src/index.ts --out-dir public/dist --format iife --minify",
    "check": "repo-check",
    "ci": "run-s build lint check test",
    "dev": "run-p serve \"build -- --sourcemap --watch\"",
    "lint": "xo --fix",
    "postversion": "git push && git push --tags",
    "preversion": "npm run ci",
    "serve": "servor public --browse --reload",
    "start": "npm run dev",
    "test": "nyc mocha",
    "test:watch": "onchange --initial \"src/**/*.ts\" \"tests/**/*.ts\" -- npm test",
    "update": "npx npm-check-updates -u"
  },
  "version": "1.0.0"
}
