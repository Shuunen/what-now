{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/what-now/issues",
  "description": "Minimalistic task coach",
  "devDependencies": {
    "@types/node": "16",
    "@typescript-eslint/eslint-plugin": "5",
    "@typescript-eslint/parser": "5",
    "c8": "7",
    "esbuild": "^0.14.0",
    "eslint": "8",
    "eslint-plugin-html": "6",
    "eslint-plugin-unicorn": "43",
    "npm-run-all": "4",
    "repo-check": "1.24",
    "servor": "4",
    "shuutils": "^5.3",
    "tailwindcss": "3",
    "tsm": "2",
    "typescript": "4",
    "uvu": "0",
    "watchlist": "0"
  },
  "files": [
    "src"
  ],
  "homepage": "https://github.com/Shuunen/what-now",
  "keywords": [
    "minimalist",
    "webapp",
    "task",
    "coach"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/what-now",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/what-now.git"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:js": "esbuild src/index.ts --outdir=public --bundle --target=es2020 --define:global=window",
    "build:css": "tailwindcss -o ./public/index.css",
    "check": "repo-check",
    "ci": "run-s build lint check test",
    "dev": "run-p dev:* serve",
    "dev:js": "npm run build:js -- --watch",
    "dev:css": "npm run build:css -- --watch",
    "lint": "eslint --fix --ignore-path .gitignore --ext .js,.ts,.html .",
    "postversion": "git push && git push --tags",
    "preversion": "npm run ci",
    "start": "npm run dev",
    "serve": "servor public --reload --browse",
    "test": "c8 uvu -r tsm tests",
    "test:watch": "watchlist src tests -- npm test"
  },
  "version": "1.1.0"
}
