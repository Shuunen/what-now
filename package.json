{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/what-now/issues",
  "description": "Minimalistic task coach",
  "devDependencies": {
    "@types/mocha": "8.2.1",
    "mocha": "8.3.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "onchange": "7.1.0",
    "shuunen-stack": "0.0.1",
    "shuutils": "4.3.0",
    "ts-node": "9.1.1",
    "tsup": "4.6.1",
    "twind": "0.15.10",
    "typescript": "4.2.3",
    "xo": "0.38.2"
  },
  "files": [
    "src",
    "static"
  ],
  "homepage": "https://github.com/Shuunen/what-now",
  "keywords": [
    "minimalist",
    "task",
    "coach"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/what-now",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/what-now.git"
  },
  "scripts": {
    "build": "stack build src/index.ts --out-dir public --format iife --minify",
    "ci": "run-s build lint test",
    "dev": "npm run build -- --dev",
    "lint": "stack lint",
    "postversion": "git push && git push --tags",
    "preversion": "npm run ci",
    "start": "npm run dev",
    "test": "nyc mocha",
    "test:watch": "onchange --initial \"src/**/*.ts\" \"tests/**/*.ts\" -- npm test",
    "update": "npx npm-check-updates -u"
  },
  "version": "1.0.0"
}
